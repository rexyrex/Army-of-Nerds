<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".SellNerdsActivity"
    android:background="@drawable/hanster" >

    <TextView
        android:id="@+id/sellNerdTitleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/sellNerdTitleStr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/sellNerdsAmountActualID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sellNerdTitleID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp"
        android:text="@string/sellNerdsAmountActualStr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <SeekBar
        android:id="@+id/sellNerdsSeekBarID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/sellNerdsAmountActualID" />

    <RadioGroup
        android:id="@+id/sellNerdsRadioGroupID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sellNerdsSeekBarID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp" >

        <RadioButton
            android:id="@+id/snNerdsRBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/sellNerdsRBtnStr" />

        <RadioButton
            android:id="@+id/snSuperNerdsRBtnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/sellSuperNerdsRBtnStr" />

        <RadioButton
            android:id="@+id/snAsianRBtnID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/snAsianRBtnStr" />
    </RadioGroup>

    <TextView
        android:id="@+id/sellNerdMoneyTitleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sellNerdsRadioGroupID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="37dp"
        android:text="@string/sellNerdMoneyTitleStr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/sellNerdMoneyActualID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/sellNerdMoneyTitleID"
        android:layout_centerHorizontal="true"
        android:text="@string/sellNerdsMoneyActualStr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/sellNerdBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="51dp"
        android:text="@string/sellNerdBtnStr" />

</RelativeLayout>
