<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".AskNicelyActivity"
    android:background="@drawable/ask_nicely" >

    <TextView
        android:id="@+id/askNicelyTitleID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:text="@string/askNicelyTitleStr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/askStatusID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askNicelyTitleID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70dp"
        android:text="@string/askStatusTitleStr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/askStatusActualID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askStatusID"
        android:layout_centerHorizontal="true"
        android:text="@string/askStatusActualStr"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <Button
        android:id="@+id/askAcceptBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askStatusActualID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="44dp"
        android:text="@string/askAcceptBtnStr" />

    <Button
        android:id="@+id/askTryAgainBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/askAcceptBtnID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="47dp"
        android:text="@string/tryAgainBtnStr" />

</RelativeLayout>
