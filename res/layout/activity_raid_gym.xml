<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".RaidGymActivity" 
    android:background="@drawable/gym_back">

    <TextView
        android:id="@+id/GymTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/GymTimeID"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#000000"
        />

    <EditText
        android:id="@+id/etGymMinutes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/GymTitle"
        android:layout_below="@+id/GymTitle"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/GymMoneyLeftTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/etGymMinutes"
        android:layout_marginTop="19dp"
        android:text="@string/moneyLeftGym"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/moneyAmountLeftAtGymID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/GymMoneyLeftTitle"
        android:text="@string/moneyLeftAtGymAmountStr"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/nOfNerdsToWorkOutID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/moneyAmountLeftAtGymID"
        android:layout_marginTop="15dp"
        android:text="@string/nerdsToWorkOutStr"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#003300" />

    <TextView
        android:id="@+id/nNerdsToworkOutValueID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/nOfNerdsToWorkOutID"
        android:text="@string/nNerdsToWorkOutValueID"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#003300" />

    <TextView
        android:id="@+id/estimatedCostForWorkOutID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gymCostID"
        android:layout_below="@+id/nNerdsToworkOutValueID"
        android:layout_marginTop="16dp"
        android:text="@string/estimatedCostForWorkOutStr"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#330000" />

    <TextView
        android:id="@+id/estimatedCostToWorkOutValueID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/estimatedCostForWorkOutID"
        android:text="@string/estimatedCostToWorkOutValueStr"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#330000" />

    <TextView
        android:id="@+id/gymCostID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/estimatedCostToWorkOutValueID"
        android:layout_below="@+id/estimatedCostToWorkOutValueID"
        android:layout_marginTop="23dp"
        android:text="@string/gymCostStr"
        android:textAppearance="?android:attr/textAppearanceLarge" 
        android:textColor="#330033"/>

    <Button
        android:id="@+id/gymMinutesOKBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/gymCostID"
        android:layout_below="@+id/gymCostID"
        android:layout_marginTop="25dp"
        android:text="@string/gymMinutesOKBtnstr" />

</RelativeLayout>