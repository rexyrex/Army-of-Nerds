<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".DeveloperModeActivity" >

    <TextView
        android:id="@+id/helpTextID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/hello_world" />

    <EditText
        android:id="@+id/developerETID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/helpTextID"
        android:layout_below="@+id/helpTextID"
        android:ems="10"
        android:inputType="number" >

        <requestFocus />
    </EditText>

    <RadioGroup
        android:id="@+id/developerRGID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/developerETID"
        android:layout_below="@+id/developerETID" >

        <RadioButton
            android:id="@+id/developerMoneyID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/developerMoneyStr" />

        <RadioButton
            android:id="@+id/developerLevelID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developerLevelStr" />

        <RadioButton
            android:id="@+id/developerLangLoiID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/developerLangLoiStr" />
    </RadioGroup>

    <Button
        android:id="@+id/developerSetBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/developerPasswordID"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="7dp"
        android:text="@string/developerSetBtnStr" />

    <Button
        android:id="@+id/developerBackBtnID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/developerSetBtnID"
        android:layout_below="@+id/developerSetBtnID"
        android:layout_marginTop="12dp"
        android:text="@string/developerBackBtnStr" />

    <EditText
        android:id="@+id/developerPasswordID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/developerRGID"
        android:ems="10"
        android:inputType="numberPassword" />

</RelativeLayout>